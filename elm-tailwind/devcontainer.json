{
	"name": "Elm with Tailwind CSS",
	"dockerFile": "Dockerfile",
	"customizations": {
		"vscode": {
			"extensions": [
				"Elmtooling.elm-ls-vscode",
				"bradlc.vscode-tailwindcss"
